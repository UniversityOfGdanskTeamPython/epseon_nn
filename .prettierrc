{
    "semi": true,
    "useTabs": false,
    "endOfLine": "lf",
    "printWidth": 88,
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "overrides": [
        {
            "files": ["*.js"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.html", "*.json", "*.prettierrc", "*.css"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "proseWrap": "always"
            }
        }
    ]
}